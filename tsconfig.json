{
    "extends": "@tsconfig/node18-strictest",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "commonjs",
        "rootDir": "./src",
        "checkJs": false,
        "allowJs": false,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "ignoreDeprecations": "5.0"
    }
}